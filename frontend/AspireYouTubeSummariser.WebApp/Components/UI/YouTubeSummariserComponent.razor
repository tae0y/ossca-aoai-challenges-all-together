@using AspireYouTubeSummariser.WebApp.Clients
@inject IApiAppClient ApiApp
@inject IJSRuntime JSR

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Youtube 요약해드려요</h2>
        </div>
    </div>

    <br />
    <!------------------------------------------ INPUT ------------------------------------------>
    <div class="row">
        <div class="col">
            <div class="mb-3">
                <label for="youtube-link" class="form-label"><strong>링크를 입력해주세요 😌</strong></label>
                <input class="form-control" id="youtube-link" placeholder="Add YouTube link here" @bind="youTubeLinkUrl" />
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <label for="video-language-code" class="form-label"><strong>영상 속 언어를</strong></label>
                <select class="form-select" id="video-language-code" aria-label="Video language code" @bind="videoLanguageCode">
                    <option value="en" selected>🇺🇸 English</option>
                    <option value="ko">🇰🇷 Korean</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <label for="summary-language-code" class="form-label"><strong>이 언어로 요약할게요</strong></label>
                <select class="form-select" id="summary-language-code" aria-label="Summary language code" @bind="summaryLanguageCode">
                    <option value="en">🇺🇸 English</option>
                    <option value="ko" selected>🇰🇷 Korean</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="mb-3">
                <label for="summary-style-prompt" class="form-label"><strong>어떤 스타일로 요약해볼까요?</strong></label>
                <input class="form-control" id="summary-style-prompt" placeholder="summarize it in polite sentences but with lots of emojis 🥴" @bind="summaryStylePrompt" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="mb-3">
            <button id="summary" type="button" class="btn btn-primary" @onclick="SummariseAsync">Summary</button>
            <button type="button" class="btn btn-secondary" @onclick="ClearAsync">다 지우자!</button>
        </div>
    </div>

    <!------------------------------------------ OUTPUT ------------------------------------------>
    <!-- 프로그레스 바 -->
    <div class="row">
        <div class="mb-3">
            <div id="progressBar" hidden="@summaryCompleted"></div>
        </div>
    </div>

    <!-- 요약결과 -->
    <div class="row">
        <div class="mb-3">
            <label for="summary" class="form-label"><strong>요약 결과를 확인해주세요</strong></label>
            <textarea class="form-control" id="result" rows="10" placeholder="Result will show here" readonly>@summaryResult</textarea>
        </div>
    </div>
</div>

@code {

    private string summaryStylePrompt = "";
    private string youTubeLinkUrl = string.Empty;
    private string videoLanguageCode = "en"; // Youtube 언어코드
    private string summaryLanguageCode = "ko"; // 프롬프트에 포함할 언어종류라 Korean으로 하면 좀더 잘됨
    private string summaryResult = string.Empty;

    private bool summaryCompleted;

    private async Task SummariseAsync()
    {
        // 추가
        summaryCompleted = false;
        await JSR.InvokeVoidAsync("YouTube.RenderProgressBar");

        try
        {
            if (summaryStylePrompt == string.Empty) //TODO: 좋은 방식의 코드인지는 잘 모르겠음
            {
                summaryStylePrompt = "summarize it in polite sentences with lots of emojis 🥴";
            }
            var result = await ApiApp.SummariseAsync(youTubeLinkUrl, videoLanguageCode, summaryLanguageCode, summaryStylePrompt);
            summaryResult = result;
        }
        catch (Exception ex)
        {
            summaryResult = ex.Message;
        }
        finally {
            summaryCompleted = true;
        }

        // 추가
        summaryCompleted = true;
    }

    private async Task ClearAsync()
    {
        youTubeLinkUrl = string.Empty;
        videoLanguageCode = "en";
        summaryLanguageCode = "ko";
        summaryResult = string.Empty;
        summaryStylePrompt = string.Empty;

        await Task.CompletedTask;
    }
}